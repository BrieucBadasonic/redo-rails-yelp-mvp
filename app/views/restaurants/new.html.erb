<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new restaurant</h1>
      <hr>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number, as: :tel %>
        <%= f.input :category, collection: Restaurant::CAT %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
